# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/data_pipeline
DB_HOST=localhost
DB_PORT=5432
DB_NAME=data_pipeline
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_INPUT=data_pipeline_input
KAFKA_TOPIC_OUTPUT=data_pipeline_output
KAFKA_CONSUMER_GROUP=pipeline_consumers

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/pipeline.log
LOG_ROTATION=daily

# API Configuration
API_BASE_URL=https://api.example.com
API_TIMEOUT=30
API_RETRY_COUNT=3

# Security Configuration
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Airflow Configuration
AIRFLOW_HOME=~/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql://username:password@localhost:5432/airflow
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#data-pipeline-alerts

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=admin@company.com,team@company.com

# Great Expectations
GREAT_EXPECTATIONS_DATA_CONTEXT_DIR=./great_expectations

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=1000
MEMORY_LIMIT=2GB

# Development Configuration
DEBUG=False
TESTING=False
ENVIRONMENT=development